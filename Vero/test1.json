{
    "datasources": [
        {
            "name": "Teradata - Prod",
            "type": "teradata"
        }
    ],
    "tables": [
        {
            "name": "Departments",
            "columns": [
                {
                    "name": "name",
                    "type": "string",
                    "primaryKey": false
                },
                {
                    "name": "id",
                    "type": "integer",
                    "primaryKey": true
                },
                {
                    "name": "school_name",
                    "type": "string",
                    "primaryKey": false
                },
                {
                    "name": "location",
                    "type": "string",
                    "primaryKey": false
                }
            ],
            "datasource": "Teradata - Prod"
        },
        {
            "name": "DepartmentFacts",
            "columns": [
                {
                    "name": "dept_id",
                    "type": "integer",
                    "primaryKey": false
                },
                {
                    "name": "num_students",
                    "type": "integer",
                    "primaryKey": false
                },
                {
                    "name": "num_professors",
                    "type": "integer",
                    "primaryKey": false
                }
            ],
            "datasource": "Teradata - Prod"
        }
    ],
    "attributes": [
        {
            "name": "Department Name",
            "expressions": [
                {
                    "value": "name",
                    "tables": [
                        "Departments"
                    ]
                }
            ]
        },
        {
            "name": "Department School",
            "expressions": [
                {
                    "value": "school_name",
                    "tables": [
                        "Departments"
                    ]
                }
            ]
        }
    ],
    "metrics": [
        {
            "name": "# of Students",
            "expressions": [
                {
                    "value": "sum(num_students)",
                    "tables": [
                        "DepartmentFacts"
                    ]
                }
            ]
        }        
    ],
    "joindefs": [
        {
            "name": "on equal id",
            "tleft": "Departments",
            "cleft": "id",
            "operator": "=",
            "tright": "DepartmentFacts",
            "cright": "dept_id",
            "expression": "tleft.id=tright.dept_id",
            "jointype": "inner"
        }
    ]
}